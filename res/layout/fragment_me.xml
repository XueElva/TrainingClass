<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="@null" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:src="@drawable/user_back"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal" 
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/avatarLayout"
                            android:text="用户名"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:id="@+id/isVIP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/userName"
                            android:background="@drawable/isvip_selector"
                            android:padding="5dp" >

                            <TextView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="@drawable/icon_vip" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                
                 <FrameLayout
                    android:id="@+id/avatarLayout"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp" >

                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/tag"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                </FrameLayout>
                
                 <ImageView
                    android:id="@+id/setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="10dp"
                    android:src="@drawable/icon_setting" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                android:background="@color/shadow_top" />

            <TextView
                android:id="@+id/myCollection"
                style="@style/myItem"
                android:drawableLeft="@drawable/icon_star"
                android:drawableRight="@drawable/icon_more_15"
                android:text="我的收藏" />

            <include layout="@layout/shadow_top" />

            <TextView
                android:id="@+id/myPublishChat"
                style="@style/myItem"
                android:drawableLeft="@drawable/ic_launcher"
                android:drawableRight="@drawable/icon_more_15"
                android:text="我的发表" />

            <include layout="@layout/shadow_bottom" />

            <!-- 商家部分 -->

            <LinearLayout
                android:id="@+id/seller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <include layout="@layout/shadow_top" />

                <TextView
                    android:id="@+id/myPublish"
                    style="@style/myItem"
                    android:drawableLeft="@drawable/ic_launcher"
                    android:drawableRight="@drawable/icon_more_15"
                    android:text="我的发布" />

                <include layout="@layout/shadow_top" />

                <TextView
                    android:id="@+id/upgrade"
                    style="@style/myItem"
                    android:drawableLeft="@drawable/ic_launcher"
                    android:drawableRight="@drawable/icon_more_15"
                    android:text="升级为会员" />

                <include layout="@layout/shadow_top" />

                <TextView
                    android:id="@+id/publishAdvertisement"
                    style="@style/myItem"
                    android:drawableLeft="@drawable/ic_launcher"
                    android:drawableRight="@drawable/icon_more_15"
                    android:text="发布广告" />

                <include layout="@layout/shadow_bottom" />
            </LinearLayout>

            <!-- 普通用户 -->

            <LinearLayout
                android:id="@+id/commonUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <include layout="@layout/shadow_top" />

                <TextView
                    android:id="@+id/becomeToSeller"
                    style="@style/myItem"
                    android:drawableLeft="@drawable/ic_launcher"
                    android:drawableRight="@drawable/icon_more_15"
                    android:text="成为商家" />

                <include layout="@layout/shadow_bottom" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                android:background="@color/shadow_top" />

            <TextView
                android:id="@+id/feedback"
                style="@style/myItem"
                android:drawableLeft="@drawable/ic_launcher"
                android:drawableRight="@drawable/icon_more_15"
                android:text="意见反馈" />

            <include layout="@layout/shadow_bottom" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>