<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/shadow_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/className"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="className"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="time"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/classImg"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/corpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="corpName"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="addr"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/share"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:background="@drawable/shape_share"
                android:drawableLeft="@drawable/icon_share"
                android:gravity="center"
                android:padding="5dp"
                android:text="分享"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/collect"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_collect"
                android:drawableLeft="@drawable/collect_selector"
                android:gravity="center"
                android:padding="5dp"
                android:text="收藏"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/shadow_bottom" />

</LinearLayout>